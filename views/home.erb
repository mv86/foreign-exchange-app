<div id="title"><h1>MV Exchange Rates</h1></div>

<div id="form-div">
  <form method="post">
    <label for="requested_date">Date:</label>
    <select name="requested_date">
      <% @dates.each do |date| %>
        <option value="<%= date['fx_date'] %>"><%= date['fx_date'] %></option>
      <% end %>
    </select>
    <label for="amount">Amount:</label>
    <input type="number" name="amount" min="0">
    <label for="base_currency">From:</label>
    <select name="base_currency">
      <% @currencies.each do |currency| %>
        <option value="<%= currency['initialism']%>">
        <%= currency['currency'] %></option>
      <% end %>
    </select>
    <label for="counter_currency">To:</label>
    <select name="counter_currency">
      <% @currencies.each do |currency| %>
        <option value="<%= currency['initialism']%>">
        <%= currency['currency'] %></option>
      <% end %>
    </select>
    <input type="submit" name="convert" value="Convert" id="convert-button">
  </form>
</div>